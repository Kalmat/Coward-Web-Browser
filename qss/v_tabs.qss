QTabBar {
    font-family: "MS Shell Dlg 2";
    font-size: 10pt;
    background: #161616;
    color: lightgrey;
    qproperty-drawBase: 0;
}

QTabBar::tab {
    font-family: "MS Shell Dlg 2";
    font-size: 10pt;
    background: #161616;
    color: lightgrey;
    border: none;
    width: %spx;
    height: %spx;
    padding-left: 3px;
    padding-right: 3px;
    padding-top: 0px;
    padding-bottom: 12px;
}

QTabBar::tab:selected {
    background: #646464;
    border: none;
}

QTabBar::tab:hover {
    background: #646464;
    border: none;
}

QTabWidget::pane {
    border: 0;
}

QTabBar::tab:first {
    background: #323232;
    border-top: none;
    padding: 0px;
    padding-left: 3px;
    padding-right: 3px;
}

QTabBar::tab:first:hover {
    background: #646464;
    border: none;
}

QTabBar::tab:last {
    background: #161616;
    border-top: none;
    padding: 0px;
    padding-left: 3px;
    padding-right: 3px;
}

QTabBar::tab:last:hover {
    background: #646464;
    border: none;
}

