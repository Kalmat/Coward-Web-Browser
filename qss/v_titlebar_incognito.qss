QToolBar {
    background: darkgreen;
    color: white;
    height: 48px;
    border: none;
    border-bottom: 1px solid #484848;
}

QLineEdit {
    font-family: "MS Shell Dlg 2";
    font-size: 10pt;
    background: #161616;
    color: white;
    border: none;
    border-radius: 8px;
    height: 40px;
}

QLineEdit:hover {
    font-family: "MS Shell Dlg 2";
    font-size: 10pt;
    background: #484848;
    color: white;
    border: none;
    border-radius: 8px;
    height: 40px;
}

QLineEdit:focus {
    font-family: "MS Shell Dlg 2";
    font-size: 10pt;
    background: #323232;
    color: white;
    border: 1px solid lightgrey;
    border-radius: 8px;
    height: 40px;
}

QLabel#spacer {
    font-family: "MS Shell Dlg 2";
    font-size: 10pt;
    background: darkgreen;
    color: white;
    border: none;
}

QToolButton {
    background: darkgreen;
    color: white;
    width: 48px;
    height: 48px;
    border: none;
}

QToolButton:disabled {
    background: darkgreen;
    color: grey;
}

QToolButton:hover {
    background: green;
}

QToolBar::separator {
    background: grey;
    width: 2px;
    max-height: 24px;
    margin-top: 10px;
